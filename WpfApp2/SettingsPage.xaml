<Page x:Class="WpfApp2.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Настройки" Background="White">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Главные настройки" FontSize="20" Margin="10"/>
            <CheckBox Content="Включить уведомления" Margin="10"/>
            <Slider Minimum="0" Maximum="100" TickFrequency="10" IsSnapToTickEnabled="True" Margin="10"/>
            <TextBlock Text="Громкость звука" Margin="10"/>
            <Button Content="Сохранить" Width="200" Margin="10"/>
            <Button Content="Настройки интерфейса" Width="200" Margin="10" Click="OnInterfaceSettingsClicked"/>

            <Button Content="Вернуться на главное меню" Width="200" Margin="10" Click="OnBackClicked"/>
            
        </StackPanel>
    </Grid>
</Page>
